<h1>Listing Parents</h1>

<table class="tables">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Student</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |s| %>
      <% s.parents.each do |parent| %>
        <tr>
          <td><%= parent.name %></td>
          <td><%= parent.email %></td>
          <td><%= s.name %></td>
          <td><%= link_to 'Show', parent %></td>
          <td><%= link_to 'Edit', edit_parent_path(parent) %></td>
          <td><%= link_to 'Destroy', parent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>



