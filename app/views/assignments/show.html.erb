<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @assignment.name %>
</p>

<p>
  <strong>Due:</strong>
  <%= @assignment.due %>
</p>

<table class="tables">
  <thead>
    <tr>
      <th>Student</th>
      <th>Grade</th>
    </tr>
  </thead>

  <tbody>
    <% @these_grades = @grades.select{ |grade| grade.assignment_id == @assignment.id} %>
    <% @these_grades.each do |grade| %>
      <tr>
        <td><%= grade.student.name %></td>
        <td><%= grade.score %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
<%= link_to 'All Assignments', assignments_path %>
<%= link_to 'Home', root_path %>
<%= link_to 'Edit', edit_assignment_path(@assignment) %>
</div>
